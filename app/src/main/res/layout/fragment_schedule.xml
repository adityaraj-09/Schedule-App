<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/schedule_frame"
    tools:context=".ScheduleFragment">
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        style="@style/schedule_greet"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Hello User !"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="Time Now "
                android:textColor="#CAC9C9"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/sm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/cloud" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/sl"
        style="@style/schedule_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawHorizontalTrack="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rmc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#F60909"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_login"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/e1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="-8dp"
                        android:src="@drawable/lecture" />

                    <TextView
                        android:id="@+id/tvl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Lecture"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/lec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="No lectures"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_login"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/e2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-0dp"
                        android:src="@drawable/tutorial" />

                    <TextView
                        android:id="@+id/tvt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tutorial"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="No tutorials"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_login"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/e3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/labs" />

                    <TextView
                        android:id="@+id/tvs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Lab"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/lab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="No labs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/newbox"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_login"
                android:backgroundTint="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/e4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvn1"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Schedule"
                            android:layout_marginLeft="160dp"
                            android:textColor="@color/purple_700"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/min1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginLeft="80dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/minus"/>

                    </LinearLayout>

                </LinearLayout>





                <TextView
                    android:id="@+id/ns1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/newbox1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_login"
                android:backgroundTint="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/e5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvn2"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Schedule"
                            android:layout_marginLeft="160dp"
                            android:textColor="@color/purple_700"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/min2"
                        android:layout_width="40dp"
                        android:layout_marginLeft="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/minus"/>

                    </LinearLayout>

                </LinearLayout>





                <TextView
                    android:id="@+id/ns2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/newbox2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_login"
                android:backgroundTint="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/e6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvn3"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Schedule"
                            android:layout_marginLeft="160dp"
                            android:textColor="@color/purple_700"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/min3"
                        android:layout_width="40dp"
                        android:layout_marginLeft="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"

                            android:layout_height="wrap_content"
                            android:src="@drawable/minus"/>

                    </LinearLayout>

                </LinearLayout>



                <TextView
                    android:id="@+id/ns3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                   android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <ImageView
        android:id="@+id/users"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:tint="@color/purple_700"
        android:background="@drawable/menu_round_bg"
        android:backgroundTint="@color/white"
        android:src="@drawable/add1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="700dp"
        android:clickable="true"
        android:focusable="true" />
    <TextView
        android:id="@+id/addnewbox"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
       android:text="Add new schdule row"
        android:layout_marginLeft="120dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="700dp"
        android:clickable="true"
        android:focusable="true" />
    <ImageView
        android:id="@+id/edit_sch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/menu_round_bg"
        android:src="@drawable/edit"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="700dp"
        android:clickable="true"
        android:focusable="true" />
    <LinearLayout
        android:id="@+id/cir_menu"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="210dp"
        android:layout_marginTop="530dp"
        android:baselineAligned="true"
        android:orientation="vertical"
        android:background="@drawable/circular_menu_bg"
       style="@style/cir_bgTint"
        >
        <LinearLayout
            android:id="@+id/sch_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/menu_round_bg"
            android:backgroundTint="@color/white">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
               android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/calender1"
                android:backgroundTint="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/task"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/menu_round_bg"
            android:backgroundTint="@color/white">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/task"
                android:backgroundTint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/min"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/menu_round_bg"
                android:backgroundTint="@color/white"
                android:src="@drawable/minus"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/purple_700" />

            <LinearLayout
                android:id="@+id/sch_dlt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/menu_round_bg"
                android:backgroundTint="@color/white">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/delete1"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>