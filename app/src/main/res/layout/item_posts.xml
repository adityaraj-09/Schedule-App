<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:backgroundTint="#F4F5FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/p_i"
                android:layout_width="50dp"
                android:layout_marginStart="10dp"
                android:layout_height="50dp"
                android:src="@drawable/profile" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/p_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="@dimen/_15sdp"
                    style="@style/textView_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/p_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="@dimen/_10sdp"
                    style="@style/textView_color"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/threed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/threedots"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/Post_img"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@color/black"
            android:src="@drawable/bg3"/>
        <VideoView
            android:visibility="gone"
            android:id="@+id/Post_vdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:src="@drawable/bg3" />

        <LinearLayout
            android:id="@+id/pdf_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/shape_item"
            android:backgroundTint="#FAF6F6"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="50dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:src="@drawable/pdfnew" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pdf_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="PDF"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/pdf_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="pdf property"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/p_des1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                style="@style/textView_color"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:text="Image Description"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/p_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Image Description"
                style="@style/textView_color"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>