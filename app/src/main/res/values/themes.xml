<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Timble" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="primary700">
        <item name="android:background" >@color/purple_700</item>
    </style>
    <style name="schedule_frame">
        <item name="android:background" >@drawable/gra_bg</item>
    </style>
    <style name="schedule_bg">
        <item name="android:background">@drawable/schedule_bg</item>
    </style>
    <style name="cir_bgTint">
        <item name="android:backgroundTint">@color/purple_700</item>
    </style>
    <style name="bg_color">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="textView_color">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="navView_color">
        <item name="android:background">@color/purple_700</item>
    </style>
    <style name="search_image">
        <item name="android:src">@drawable/book_search_b</item>
    </style>
    <style name="bookF_bg">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="Dialoge" >
        <item name="android:windowBackground">@drawable/empty_bac</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="Theme.Todoister.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Todoister.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle" >@style/Modal</item>
    </style>
    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/sheet_back</item>
    </style>
    <style name="schedule_greet">
        <item name="android:background">@drawable/frame_1</item>
    </style>
    <style name="tint">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="gif">
        <item name="android:src">@drawable/work_d
        </item>
    </style>
</resources>